                                </StackPanel>
                                <StackPanel Style="{StaticResource ItemStackPanel}">
                                    <Label Content="Right" Padding="0" Margin="0 0 5 0" Width="40" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
