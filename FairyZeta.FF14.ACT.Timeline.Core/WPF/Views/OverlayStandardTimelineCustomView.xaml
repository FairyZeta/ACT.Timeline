                                </StackPanel>
                                <StackPanel Style="{StaticResource ItemStackPanel}">
                                    <Label Content="Top" Padding="0" Margin="0 0 5 0" Width="40" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
