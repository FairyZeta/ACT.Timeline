<Window x:Class="FairyZeta.FF14.ACT.Timeline.Test.View.TestWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FairyZeta.FF14.ACT.Timeline.Test.ViewModels"
        Height="350" Width="800" 
        Title="タイムラインテスト">
    
    <Window.DataContext>
        <vm:TestWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5" >
            <TextBox x:Name="FilePathBox" Text="D:\TestTimeline\The Second Coil Of Bahamut - Turn (4).txt" Height="30" Width="400"/>
            <Button Width="120" Height="30" Command="{Binding Test_TimelineTextLoadCommand}" CommandParameter="{Binding Text, ElementName=FilePathBox}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" >
            <Button Content="Overlay Manage" Width="120" Height="30" Margin="10 0" Command="{Binding ShowOverlayManageCommand}" />
            <Button Content="T-Start" Width="120" Height="30" Command="{Binding TimelineComponent.TimerControlCommand}" CommandParameter="Start"/>
            <Button Content="T-Stop" Width="120" Height="30" Command="{Binding TimelineComponent.TimerControlCommand}" CommandParameter="Stop"/>
        </StackPanel>
    </Grid>
</Window>
